---
import ThemeToggle from './ThemeToggle.astro';

const footerLinks = [
  { label: 'Search', href: '/search' },
  { label: 'Glitch.com', href: 'https://glitch.com', external: true },
  { label: 'About Glitch', href: '/about' },
  { label: 'RSS', href: '/rss.xml' },
  { label: 'Glitch on Twitter', href: 'https://twitter.com/glitch', external: true },
  { label: 'Glitch on Mastodon', href: 'https://mastodon.social/@glitch', external: true },
];
---

<footer class="border-t border-neutral-200 dark:border-neutral-800 mt-auto">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <p class="text-sm text-neutral-700 dark:text-neutral-300 mb-4">
      Celebrating the makers, creators, and coders who shine.
    </p>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <nav class="flex flex-wrap gap-x-4 gap-y-2">
        {footerLinks.map(link => (
          <a
            href={link.href}
            target={link.external ? '_blank' : undefined}
            rel={link.external ? 'noopener noreferrer' : undefined}
            class="text-sm text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white transition-colors"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <div class="flex items-center gap-4">
        <ThemeToggle />

        <!-- Koi Fish Logo -->
        <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="32" height="32" rx="6" fill="#6d28d9"/>
          <path d="M8 12c0-1.1.9-2 2-2h4v4h-4c-1.1 0-2-.9-2-2z" fill="white"/>
          <path d="M8 20c0-1.1.9-2 2-2h4v4h-4c-1.1 0-2-.9-2-2z" fill="white"/>
          <path d="M16 8h4c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2h-4V8z" fill="white" opacity="0.7"/>
          <circle cx="22" cy="12" r="2" fill="white"/>
        </svg>
      </div>
    </div>
  </div>
</footer>
