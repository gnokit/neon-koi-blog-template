---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, author } = post.data;

// Handle base URL for GitHub Pages
const baseUrl = import.meta.env.BASE_URL;
const heroImageUrl = heroImage?.startsWith('http') ? heroImage : heroImage ? `${baseUrl}${heroImage.startsWith('/') ? heroImage.slice(1) : heroImage}` : undefined;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description} image={heroImageUrl}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12">
      <h1 class="text-4xl sm:text-5xl lg:text-[3.5rem] font-extrabold mb-6 text-[#5B4EE6] dark:text-[#7B6EF6] leading-tight">
        {title}
      </h1>

      <div class="flex items-center gap-4 text-base text-neutral-600 dark:text-neutral-400">
        <span class="font-medium">By {author}</span>
        <span>•</span>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {updatedDate && (
          <>
            <span>•</span>
            <span>Updated: {new Date(updatedDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
          </>
        )}
      </div>
    </header>

    {heroImage && (
      <div class="mb-8 rounded-lg overflow-hidden">
        <img src={heroImageUrl} alt={title} class="w-full h-auto object-cover" />
      </div>
    )}

    <div class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </div>
  </article>
</BaseLayout>
